<Window x:Class="TM_WPF.AddToilet"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TM_WPF"
        mc:Ignorable="d"
        Title="AddToilet" Height="380" Width="500"
        Background="#f8f9fa">
    <DockPanel>
        <Border Background="White" DockPanel.Dock="Top" Padding="16" BorderBrush="#ddd" BorderThickness="0,0,0,1">
            <DockPanel>
                <TextBlock Text="Clean Monitor" 
               FontSize="20" FontWeight="Bold"
               DockPanel.Dock="Left"/>
            </DockPanel>
        </Border>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="0,8">
                <Border Background="White" Margin="8" Padding="16" BorderBrush="#ddd" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="층 입력"></TextBlock>
                        <StackPanel Orientation="Horizontal">
                            <TextBox x:Name="FloorTextBox" HorizontalAlignment="Left" Width="100" Margin="10,8,0,0"></TextBox>
                            <TextBlock Text="층" Margin="5,8,0,0"></TextBlock>
                        </StackPanel>

                        <TextBlock Text="성별 입력" Margin="0,12"></TextBlock>
                        <StackPanel Orientation="Horizontal">
                            <RadioButton x:Name="RadioMale" Content="남자" Margin="10,0,0,5"></RadioButton>
                            <RadioButton x:Name="RadioFemale" Content="여자" Margin="50,0,0,5"></RadioButton>
                        </StackPanel>
                        <TextBlock Text="상세 위치" Margin="0,10"></TextBlock>
                        <TextBox x:Name="DetailTextBox" HorizontalAlignment="Left" Width="300" Margin="10,0,0,0"></TextBox>
                    </StackPanel>
                </Border>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Height="48" RenderTransformOrigin="0.513,-0.391">
                    <Button x:Name="BtnOK" Content="OK" Width="100" Height="30" Click="BtnOK_Click"></Button>
                    <Button x:Name="BtnClose" Content="Cancle" Width="100" Height="30" Margin="50,0,20,0" Click="BtnClose_Click"></Button>
                </StackPanel>
            </StackPanel>
            
        </ScrollViewer>
    </DockPanel>
</Window>

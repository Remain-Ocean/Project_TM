<Window x:Class="TM_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Clean Monitor" Height="600" Width="1000"
        Background="#f8f9fa">

    <DockPanel>
        <!-- 상단 메뉴 바 -->
        <Border Background="White" DockPanel.Dock="Top" Padding="16" BorderBrush="#ddd" BorderThickness="0,0,0,1">
            <DockPanel>
                <TextBlock Text="Clean Monitor" 
                           FontSize="20" FontWeight="Bold"
                           DockPanel.Dock="Left"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Background="Gray" Content="+" Width="30" Height="30" Margin="8,0" Command="{Binding AddToiletCommand}" BorderBrush="Transparent" Click="BtnAdd"/>
                    <Button Background="Transparent" Width="30" Height="30" Content="🔔" Margin="8,0" BorderBrush="Transparent"/>
                    <Button Background="Transparent" Width="30" Height="30" Content="⚙" Margin="8,0" BorderBrush="Transparent"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- 본문 -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" RenderTransformOrigin="0.489,0.564">
            <StackPanel Margin="16">

                <!-- 요약 카드 -->
                <UniformGrid Columns="4" Margin="0,0,0,16">
                    <Border Background="White" CornerRadius="12" Margin="8" Padding="16" BorderBrush="#ddd" BorderThickness="1" >
                        <StackPanel>
                            <TextBlock Text="{Binding TotalToilets}" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="총 화장실" Foreground="Gray" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Border Background="White" CornerRadius="12" Margin="8" Padding="16" BorderBrush="#ddd" BorderThickness="1" >
                        <StackPanel>
                            <TextBlock Text="{Binding TotalEmergancy}" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Foreground="Red"/>
                            <TextBlock Text="긴급 상황" Foreground="Gray" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Border Background="White" CornerRadius="12" Margin="8" Padding="16" BorderBrush="#ddd" BorderThickness="1" >
                        <StackPanel>
                            <TextBlock Text="{Binding TotalWarning}" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Foreground="Orange"/>
                            <TextBlock Text="주의 필요" Foreground="Gray" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Border Background="White" CornerRadius="12" Margin="8" Padding="16" BorderBrush="#ddd" BorderThickness="1" >
                        <StackPanel>
                            <TextBlock Text="{Binding Totalnormal}" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Foreground="Green"/>
                            <TextBlock Text="정상 상태" Foreground="Gray" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>
                <ItemsControl ItemsSource="{Binding ToiletList}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Margin="5" Width="160" Height="120">
                                <StackPanel Margin="5">
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                                        <StackPanel Margin="3">
                                            <TextBlock Text="{Binding Emergency}" Foreground="Red" FontWeight="Bold" HorizontalAlignment="Center"/>
                                            <TextBlock Text="긴급" FontSize="10" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                        <StackPanel Margin="3">
                                            <TextBlock Text="{Binding Warning}" Foreground="Orange" FontWeight="Bold" HorizontalAlignment="Center"/>
                                            <TextBlock Text="주의" FontSize="10" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                        <StackPanel Margin="3">
                                            <TextBlock Text="{Binding Normal}" Foreground="Green" FontWeight="Bold" HorizontalAlignment="Center"/>
                                            <TextBlock Text="정상" FontSize="10" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8">
                                            <TextBlock Text="🕦" Foreground="Gray" FontSize="11" Margin="3,0"/>
                                            <TextBlock Text="{Binding RenewTime}" Foreground="Gray" FontSize="11"/>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <!-- 화장실 현황 카드 -->
                <WrapPanel>
                    <!-- 카드 복사해서 여러 개 배치 -->
                    <Border Background="White" CornerRadius="12" Margin="8" Width="200" Padding="16" BorderBrush="LightGray" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="1층 여자화장실" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="본관 1층 서쪽" Foreground="Gray" FontSize="12" HorizontalAlignment="Center" Margin="0,4"/>
                            <UniformGrid Rows="1" Columns="3" HorizontalAlignment="Center" Width="170">
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                    <TextBlock Text="0" Foreground="Red" HorizontalAlignment="Center" Margin="0,8"/>
                                    <TextBlock Text="긴급" Foreground="Red"/>
                                </StackPanel>
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                    <TextBlock Text="0" Foreground="Orange" HorizontalAlignment="Center" Margin="0,8"/>
                                    <TextBlock Text="주의" Foreground="Orange"/>
                                </StackPanel>
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                    <TextBlock Text="3" Foreground="Green" HorizontalAlignment="Center" Margin="0,8"/>
                                    <TextBlock Text="정상" Foreground="Green"/>
                                </StackPanel>
                            </UniformGrid>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8">
                                <TextBlock Text="🕦" Foreground="Gray" FontSize="11" Margin="3,0"/>
                                <TextBlock Text="5분 전" Foreground="Gray" FontSize="11"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </WrapPanel>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>

